<?xml version="1.0" encoding="UTF-8"?>
<schema name="epidoc" version="1.2">
  <types>
    <fieldType name="boolean" class="solr.BoolField" sortMissingLast="true" omitNorms="true"/>
    <fieldType name="int" class="solr.TrieIntField" precisionStep="0" omitNorms="true" positionIncrementGap="0"/>
    <fieldType name="long" class="solr.TrieLongField" precisionStep="0" omitNorms="true" positionIncrementGap="0"/>
    <fieldType name="string" class="solr.StrField" sortMissingLast="true" omitNorms="true"/>
    
    <fieldType name="ntext" class="solr.TextField">
      <analyzer type="index">
        <tokenizer class="solr.WhitespaceTokenizerFactory"/>
        <filter class="solr.LowerCaseFilterFactory"/>
        <filter class="solr.ShingleFilterFactory" maxShingleSize="2" minShingleSize="2" outputUnigrams="false"/>
        <filter class="solr.NGramFilterFactory" minGramSize="3" maxGramSize="20"/>
      </analyzer>
      <analyzer type="query">
        <tokenizer class="solr.KeywordTokenizerFactory"/>
        <filter class="solr.LowerCaseFilterFactory"/>
      </analyzer>
    </fieldType>

    <fieldType name="text" class="solr.TextField" positionIncrementGap="100">
      <analyzer type="index">
        <tokenizer class="solr.WhitespaceTokenizerFactory"/>
        <filter class="solr.WordDelimiterFilterFactory" generateWordParts="1" generateNumberParts="1" catenateWords="1" catenateNumbers="1" catenateAll="0" splitOnCaseChange="1"/>
      </analyzer>
      <analyzer type="query">
        <tokenizer class="solr.WhitespaceTokenizerFactory"/>
        <filter class="solr.WordDelimiterFilterFactory" generateWordParts="1" generateNumberParts="1" catenateWords="0" catenateNumbers="0" catenateAll="0" splitOnCaseChange="1"/>
      </analyzer>
    </fieldType>

    <fieldType name="lctext" class="solr.TextField" positionIncrementGap="100">
      <analyzer type="index">
        <tokenizer class="solr.WhitespaceTokenizerFactory"/>
        <filter class="solr.LowerCaseFilterFactory"/>
        <filter class="solr.WordDelimiterFilterFactory" generateWordParts="1" generateNumberParts="1" catenateWords="1" catenateNumbers="1" catenateAll="0" splitOnCaseChange="1"/>
      </analyzer>
      <analyzer type="query">
        <tokenizer class="solr.WhitespaceTokenizerFactory"/>
        <filter class="solr.LowerCaseFilterFactory"/>
        <filter class="solr.WordDelimiterFilterFactory" generateWordParts="1" generateNumberParts="1" catenateWords="0" catenateNumbers="0" catenateAll="0" splitOnCaseChange="1"/>
      </analyzer>
    </fieldType>
    
  </types>
  <fields>
    <field name="collection" type="string" indexed="true" stored="true" required="true" multiValued="true"/>
    <field name="id" type="string" indexed="true" stored="true" required="true"/>
    <field name="display_place" type="string" indexed="true" stored="true"/>
    <field name="display_date" type="string" indexed="false" stored="true"/>
    <field name="identifier" type="string" indexed="true" stored="false" multiValued="true"/>
    <field name="transcription" type="text" indexed="true" stored="false"/>
    <field name="transcription_id" type="text" indexed="true" stored="false"/>
    <field name="transcription_ic" type="text" indexed="true" stored="false"/>
    <field name="transcription_ia" type="text" indexed="true" stored="false"/>
    <field name="transcription_ngram_ia" type="ntext" indexed="true" stored="false"/>
    <field name="translation" type="text" indexed="true" stored="true" multiValued="true"/>
    <field name="has_translation" type="boolean" indexed="true" stored="true"/>
    <field name="place" type="lctext" indexed="true" stored="false" multiValued="true"/>
    <field name="date_start" type="int" indexed="true" stored="false" multiValued="true"/>
    <field name="date_end" type="int" indexed="true" stored="false" multiValued="true"/>
    <field name="metadata" type="text" indexed="true" stored="false" multiValued="true"/>
    <field name="images" type="boolean" indexed="true" stored="true"/>
    <field name="invnum" type="text" indexed="true" stored="true"/>
    <field name="language" type="text" indexed="true" stored="true" multiValued="true"/>
    <field name="facet_language" type="string" indexed="true" stored="true" multiValued="true"/>
    <field name="all" type="text" indexed="true" stored="false" multiValued="true"/>
    <field name="series" type="string" indexed="true" stored="false" multiValued="false" required="true"/>
    <field name="volume" type="int" indexed="true" stored="false" multiValued="false" required="true" default="0"/>
    <field name="item" type="long" indexed="true" stored="false" multiValued="false" required="true" default="0"/>
    <field name="ddbdp_item_letter" type="string" stored="true" indexed="true" multiValued="true" required="false"/>
    <field name="hgv_item_letter" type="string" stored="true" indexed="true" multiValued="true" required="false"/>
    <field name="apis_item_letter" type="string" stored="true" indexed="true" multiValued="true" required="false"/>
    <field name="ddbdp_series" type="string" indexed="true" stored="true" default="0" multiValued="true"/>
    <field name="hgv_series" type="string" indexed="true" stored="true" default="0" multiValued="true"/>
    <field name="apis_series" type="string" indexed="true" stored="true" default="0" multiValued="true"/>
    <field name="ddbdp_volume" type="string" indexed="true" stored="true" default="0" multiValued="true"/>
    <field name="hgv_volume" type="string" indexed="true" stored="true" default="0" multiValued="true"/>
    <field name="apis_volume" type="string" indexed="true" stored="true" default="0" multiValued="true"/>
    <field name="ddbdp_item" type="long" indexed="true" stored="true" default="0" multiValued="true"/>
    <field name="hgv_item" type="long" indexed="true" stored="true" default="0" multiValued="true"/>
    <field name="apis_item" type="long" indexed="true" stored="true" default="0" multiValued="true"/>
    <field name="ddbdp_full_identifier" type="string" indexed="true" stored="true" multiValued="true"/>
    <field name="hgv_full_identifier" type="string" indexed="true" stored="true" multiValued="true"/>
    <field name="apis_full_identifier" type="string" indexed="true" stored="true" multiValued="true"/>
    <field name="hgv_identifier" type="string" indexed="false" stored="true" default="0" multiValued="true"/>
    <field name="apis_inventory" type="string" indexed="false" stored="true" multiValued="true"/>
  </fields>
  
  <uniqueKey>id</uniqueKey>

  <!-- field for the QueryParser to use when an explicit fieldname is absent -->
    <defaultSearchField>all</defaultSearchField> 

  <!-- SolrQueryParser configuration: defaultOperator="AND|OR" -->
  <solrQueryParser defaultOperator="AND"/>
  
  <copyField source="transcription_ia" dest="all"/>
  <copyField source="translation" dest="all"/>
  <copyField source="metadata" dest="all"/>
  
</schema>
